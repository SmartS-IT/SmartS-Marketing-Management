
@{
    ViewBag.Title = "MiscellaneousSearch";
}

<div>
    <div>
        <div style="display: flex; justify-content: space-between;">
            <h4 style="text-align: left;">Application Search</h4>
            <label id="AppErrorField" style="padding-top:9px" class="blinker"></label>
        </div>
        <p></p>
        <p></p>
        <div>
            <div class="container" style="border: 2px solid #E0E0E0;  display: flex; justify-content: left;
                            margin-top: -5px; background-color: lightgrey; height:100px ">
                <div style="padding:10px">
                    <div style="display:flex">
                        <label id="lbFromDate" style="margin-right: 10px; padding-top:3px; align-content: center">Codes</label>
                        <select class="js-example-basic-single" style="height: 22px;
                            width: auto; align-content: center" id="SltCodes" name="SltCodes" onchange="ChangeSelection()">
                            <option value="1">Domain</option>
                            <option value="2">Typing Center</option>
                        </select>
                        <input list="MagicHouses" id="myHouse" style="height: 22px; margin-left: 5px" name="myHouse" placeholder="Type Here..." />
                        <datalist id="MagicHouses"></datalist>
                    </div>
                </div>
                <div style="padding-left:50px; padding:10px">
                    <div>
                        <label id="lbFromDate" style="margin-right:10px">From Date</label>
                        <input type="date" style="height: 22px; " id="txtFromDate"><br><br>
                    </div>
                </div>
                <div style="padding-left:50px; padding:10px">
                    <div>
                        <label id="lbToDate" style="margin-right:10px">To Date</label>
                        <input type="date" style="height: 22px; " id="txtToDate"><br><br>
                    </div>
                </div>
                <div style="padding-left:50px; padding:10px">
                    <div>
                        <label id="lbToDate" style="margin-right:10px">Other</label>
                        <select class="js-example-basic-single" style="height: 22px; width: auto; align-content: center"
                                id="OptOther" name="Other">
                            <option id="1">Mobile</option>
                            <option id="2">FreeZone Code</option>
                        </select>
                        <input type="text" id="txtFreeTxt" style="width:130px; height: 23px"><br><br>
                    </div>
                </div>
                <div style="padding-left: 20px; padding: 10px; text-align: end; position: absolute; margin-top:40Px; right: 50px; align-content: end">
                    <button class="btn btn-success" onclick="FetchAllApplicationData()"><span>Search</span></button>
                    <button class="btn btn-danger" onclick="ClearDetails()"><span>Clear</span></button>
                </div>
            </div> 
            <div class="container table-wrapper">
                <div class="loader" style="position:absolute;top:50%;right:45%" id="AppBuffer"></div>
                <table class="table table-striped table-class" id="tb_ApplicantDtls"
                       style="width: 100%; height: 100%; column-width:auto">
                    <thead>
                        <tr>
                            <th>Clinic Name</th>
                            <th>Entry Date</th>
                            <th>Applicant Name</th>
                            <th>Mobile</th>
                            <th>Email</th>
                            <th>Country</th>
                            <th>TC Name</th>
                            <th>TC Mobile</th>
                            <th>TC Email</th>
                            <th>Profession</th>
                            <th>Heard About</th>
                            <th>Freezone Code</th>
                            <th>Customer Type</th>
                            <th>BSC Code</th>
                            <th>TC Code</th>
                        </tr>
                    </thead>
                    <tbody>
                    </tbody>
                </table>
